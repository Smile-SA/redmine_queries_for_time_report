<%
  ################
  # Smile specific #784714: V4.0.0 : My page Time Entry queries
  # Smile specific : new partial
  queries = TimeEntryQuery.visible.sorted
-%>
<h3>
  <%= l(:label_time_entry_plural) %>
</h3>

<div id="<%= block %>-settings">
  <%= form_tag(my_page_path, :remote => true) do %>
    <div class="box">
      <p>
        <label>
          <%= l(:label_query) %>
          <%= select_tag "settings[#{block}][query_id]", content_tag("option") + options_from_collection_for_select(queries, :id, :name_and_project, settings[:query_id]) %>
        </label>
      </p>
    </div>
    <p>
      <%= submit_tag l(:button_save) %>
    </p>
  <% end %>
</div>
